{
  "extends": ["react-app", "react-app/jest"],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "no-unused-vars": "warn",
    "no-undef": "error",
    "react/prop-types": "error",
    "react/react-in-jsx-scope": "off",
    "indent": ["error", 2],
    "eqeqeq": ["error", "always"],
    "comma-dangle": ["error", "always"],
    "brace-style": ["error", "1tbs"],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  }
}
